%h1
  Add New Topic
  %small on #{@project.name}

= form_for :topic, url: project_topics_url do |t|
  .form-group
    = t.label :name
    = t.text_field :name, class: "form-control"
  .form-group
    = t.label :url
    = t.text_field :url, class: "form-control"
  = t.submit class: "btn btn-default"
